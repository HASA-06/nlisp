<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="hit">
     <update id="setBulletinBoardHit">
        UPDATE
            bulletin_boards
        SET
            hit = hit + 1
        WHERE
            id = #{bulletinBoardId}
     </update>
</mapper>