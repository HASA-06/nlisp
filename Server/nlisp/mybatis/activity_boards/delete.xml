<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="delete">
     <select id="deleteActivityBoardData">
        DELETE FROM
            activity_boards
        WHERE
        (
            id = #{id}
        AND
            (
                user_id = #{userId}
            OR
                #{userId} = 1
            OR
                #{userId} = 2
            )
        )
     </select>
</mapper>